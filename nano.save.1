
.produto {
    width: 40%;
    background-color: aqua;
  }
  
  .produto li {
    display: flex;
  }
  
  .produto button {
    flex: 1;
    cursor: pointer;
    position: relative;
    left: 0;
    background-color: #EEE;
    margin: .5em;
    padding: 0;
    border-radius: 4px;
    display: flex;
    align-items: stretch;
    height: 1.8em;
  }
  
  .produto button:hover {
    color: #2c3a41;
    background-color: #e6e6e6;
    left: .1em;
  }
  
  .produto button:active {
    background-color: #525252;
    color: #fafafa;
  }
  
  .produto button.selected {
    background-color: black;
    color: white;
  }
  
  .produto button.selected:hover {
    background-color: #505050;
    color: white;
  }
  
  .produto button.selected:active {
    background-color: black;
    color: white;
  }
  
  .produto .badge {
    display: inline-block;
    font-size: small;
    color: white;
    padding: 0.8em 0.7em 0 0.7em;
    background-color: #405061;
    line-height: 1em;
    margin-right: .8em;
    margin-bottom: .1em;
    align-items: center;
    border-radius: 4px 0 0 4px;
  }
  
  .produto .name {
    align-self: center;
  }
